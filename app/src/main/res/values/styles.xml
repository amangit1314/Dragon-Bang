<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="score_style">
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="score_number_style">
        <item name="android:background">@color/light_blue</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="score_number_style_red">
        <item name="android:background">@color/light_red</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="blue_button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_marginLeft">@dimen/dp6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="red_button">
        <item name="android:background">@drawable/button2</item>
        <item name="android:layout_marginRight">@dimen/dp6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp11</item>
    </style>

    <style name="red_button_biggerText" parent="@style/red_button">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="nameContainer">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/dp8</item>
        <item name="android:paddingTop">@dimen/dp8</item>
    </style>

    <style name="nameContainerGoku" parent="nameContainer">
        <item name="android:background">@color/red</item>
    </style>

    <style name="nameContainerFrieza" parent="nameContainer">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="rematchButton">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/button3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
    </style>

</resources>
